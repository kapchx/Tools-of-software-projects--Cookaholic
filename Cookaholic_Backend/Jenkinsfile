pipeline {

    agent any
    stages {

        stage('Checkout Codebase'){
            steps{
                cleanWs()
                checkout scm
            }
        }

        stage('Build'){
            steps{
                sh 'cd Cookaholic_Backend'
                sh 'ls -lha Cookaholic_Backend/'
                dir('your-sub-directory') {
                    sh "pwd"
                    sh "ls -lha"
                }
                sh '/usr/local/bin/mvn clean install'
            
            }
        }

        stage('Test'){
            steps{
                sh 'echo testing'
            }
        }

        stage('Deploy'){
            steps{
                sh 'echo Deploy' 
            }
        }
    }

}
